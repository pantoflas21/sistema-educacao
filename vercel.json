{
  "version": 2,
  "buildCommand": "node build.js",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "cd apps/backend && npm install && cd ../frontend && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
