{
  "name": "aletheia",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "node build.js",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "install": "cd apps/frontend && npm install",
    "install:all": "cd apps/backend && npm install && cd ../frontend && npm install",
    "start": "cd apps/backend && npm start"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "serverless-http": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.11.0",
    "@vercel/node": "^3.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.6.3"
  }
}
